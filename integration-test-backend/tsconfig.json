{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    // NodeJS 14 doesn't have full esnext coverage (it's more like ES2020), but supports enough of esnext that we can use top-level await
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES2020",
    "strict": true
  }
}